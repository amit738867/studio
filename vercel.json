{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "includeFiles": [
          "node_modules/canvas/**"
        ]
      }
    }
  ],
  "build": {
    "env": {
      "NODE_JS_VERSION": "22"
    }
  },
  "functions": {
    "src/app/api/certificates/**/*": {
      "maxDuration": 60
    }
  }
}